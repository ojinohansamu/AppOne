<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="5dp"
        android:id="@+id/lblProdNameValue"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:text="REGULAR EM6adsecvfrt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="QTY:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblQty"
        android:textSize="18sp"
        android:layout_alignTop="@+id/lblProdNameValue"
        android:layout_marginLeft="220dp" />

    <TextView
        android:text="9999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQty"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/lblQty"
        android:layout_toRightOf="@+id/lblQty"
        android:textStyle="normal|bold" />

    <TextView
        android:text="UPC:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblProdNameValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblUPC"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false" />

    <TextView
        android:text="1234567890"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblUPC"
        android:layout_toRightOf="@+id/lblUPC"
        android:layout_toEndOf="@+id/lblUPC"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/lblUPCValue" />

    <TextView
        android:text="Item No:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblUPCValue"
        android:layout_toRightOf="@+id/lblUPCValue"
        android:layout_toEndOf="@+id/lblUPCValue"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:id="@+id/lblItemNo" />

    <TextView
        android:text="123456"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblItemNo"
        android:layout_toRightOf="@+id/lblItemNo"
        android:layout_toEndOf="@+id/lblItemNo"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/lblItemNoValue" />

</RelativeLayout>