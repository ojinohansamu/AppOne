<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dsdmain_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f1f1f1"
    tools:context="com.example.homannh.dsd.DSDMainMenuActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblRoutinfoID"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblRoutinfoID"
        android:layout_alignLeft="@+id/lblRoutinfoID"
        android:layout_alignStart="@+id/lblRoutinfoID"
        android:id="@+id/lblRoutinfoName"
        android:textSize="18sp" />

    <Button
        android:text="@string/lblAdjustments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/btnAdjustment"
        android:layout_below="@+id/lblRoutinfoName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:background="@drawable/button_long" />


    <Button
        android:text="@string/lblSales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSales"
        android:layout_below="@+id/btnAdjustment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:background="@drawable/button_long" />


    <Button
        android:text="@string/lblOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnOrders"
        android:layout_below="@+id/btnSales"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:background="@drawable/button_long" />

    <Button
        android:text="@string/lblEndOfTheDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnEndOfDay"
        android:layout_below="@+id/btnOrders"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:background="@drawable/button_long" />

    <Button
        android:text="@string/lblMiscellaneous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMiscellaneous"
        android:layout_below="@+id/btnEndOfDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:background="@drawable/button_long" />


    <Button
        android:text="@string/lblExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit"
        android:layout_below="@+id/btnMiscellaneous"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:background="@drawable/button_long"
        android:onClick="btnExitOnClicked" />

</RelativeLayout>
